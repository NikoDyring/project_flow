<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Dashboard</h1>

    <div class="mb-10">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-800">Recent Projects</h2>
        <%= link_to "View All Projects", projects_path, class: "text-blue-600 hover:underline" %>
      </div>

      <% if @projects.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @projects.each do |project| %>
            <%= link_to project_path(project) do %>
              <div class="bg-white rounded-lg shadow hover:shadow-lg transition p-6">
                <h3 class="text-xl font-semibold text-gray-900"><%= project.name %></h3>
                <p class="text-gray-600 mt-2"><%= truncate(project.description, length: 80) %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No projects yet. Create one to get started!</p>
      <% end %>
    </div>
  </div>
</div>