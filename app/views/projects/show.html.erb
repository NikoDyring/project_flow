<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-5 border-b border-gray-200 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-900"><%= @project.name %></h1>
        <div class="space-x-3">
          <% if policy(@project).edit? %>
            <%= link_to "Edit", edit_project_path(@project), class: "text-blue-600 hover:underline" %>
          <% end %>
          <% if policy(@project).archive? %>
            <%= link_to "Archive", archive_project_path(@project), data: { turbo_method: :patch, turbo_confirm: "Archive this project?" }, class: "text-red-600 hover:underline" %>
          <% end %>
        </div>
      </div>

      <div class="p-6">
        <p class="text-gray-700 mb-6"><%= @project.description.presence || "No description." %></p>

        <!-- Stats Cards -->
        <div class="grid grid-cols-3 gap-4 mb-8">
          <div class="bg-gray-100 rounded-lg p-4 text-center">
            <div class="text-3xl font-bold text-gray-900"><%= @total_tasks %></div>
            <div class="text-sm text-gray-600">Total Tasks</div>
          </div>
          <div class="bg-green-100 rounded-lg p-4 text-center">
            <div class="text-3xl font-bold text-green-800"><%= @completed_tasks %></div>
            <div class="text-sm text-gray-600">Completed</div>
          </div>
          <div class="bg-red-100 rounded-lg p-4 text-center">
            <div class="text-3xl font-bold text-red-800"><%= @overdue_tasks %></div>
            <div class="text-sm text-gray-600">Overdue</div>
          </div>
        </div>

        <div>
          <h2 class="text-xl font-semibold mb-4">Tasks</h2>
          <p class="text-gray-500">Task list coming soon...</p>
        </div>
      </div>
    </div>
  </div>
</div>